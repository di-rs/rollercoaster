{
	"name": "@di-rs/rollercoaster",
	"version": "1.2.1",
	"description": "CLI tool for running tasks without knowing the manager",
	"type": "module",
	"packageManager": "bun@1.1.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/di-rs/rollercoaster.git"
	},
	"homepage": "https://github.com/di-rs/rollercoaster",
	"bugs": {
		"url": "https://github.com/di-rs/rollercoaster/issues"
	},
	"author": "Dima Portish",
	"license": "MIT",
	"bin": {
		"rollercoaster": "./dist/index.js"
	},
	"files": [
		"dist/index.js"
	],
	"scripts": {
		"dev": "bun run --watch src/index.ts",
		"build:npm": "bun run scripts/build-npm.ts",
		"build:binaries": "bun run scripts/build-binaries.ts",
		"build": "bun run build:npm",
		"test": "vitest",
		"test:watch": "vitest --watch",
		"lint": "biome lint src",
		"format": "biome format --write src",
		"check": "biome check --write src",
		"typecheck": "tsc --noEmit",
		"changeset": "changeset",
		"version": "changeset version",
		"release": "bun run build && changeset publish",
		"prepare": "husky"
	},
	"keywords": [
		"cli",
		"task-runner",
		"npm",
		"yarn",
		"pnpm",
		"bun",
		"task",
		"fuzzy-search"
	],
	"dependencies": {
		"chalk": "^5.6.2",
		"commander": "^14.0.3",
		"conf": "^15.1.0",
		"fuse.js": "^7.1.0",
		"ink": "^6.6.0",
		"js-yaml": "^4.1.1",
		"react": "^19.2.4",
		"react-devtools-core": "^7.0.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.14",
		"@changesets/cli": "^2.29.8",
		"@types/bun": "^1.3.8",
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^25.2.2",
		"@types/react": "^19.2.13",
		"@vitest/coverage-v8": "^4.0.18",
		"husky": "^9.1.7",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
