{
  "name": "@di/rollercoaster",
  "version": "0.0.0",
  "description": "CLI tool for running tasks without knowing the manager",
  "type": "module",
  "bin": {
    "rollercoaster": "./dist/index.mjs"
  },
  "scripts": {
    "dev": "tsdown --watch src/index.ts",
    "build": "tsdown src/index.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src",
    "format": "prettier --write src",
    "typecheck": "tsc --noEmit",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish"
  },
  "keywords": [
    "cli",
    "task-runner",
    "npm",
    "yarn",
    "pnpm",
    "task",
    "fuzzy-search"
  ],
  "author": "dmitriy-rs",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "conf": "^13.0.1",
    "fuse.js": "^7.0.0",
    "ink": "^5.0.1",
    "js-yaml": "^4.1.1",
    "react": "^18.3.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.18",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsdown": "^0.16.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
