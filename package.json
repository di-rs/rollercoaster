{
  "name": "@di-rs/rollercoaster",
  "version": "1.1.0",
  "description": "CLI tool for running tasks without knowing the manager",
  "type": "module",
  "packageManager": "bun@1.1.0",
  "bin": {
    "rollercoaster": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsdown --watch src/index.ts",
    "build": "tsdown src/index.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "biome lint src",
    "format": "biome format --write src",
    "check": "biome check --write src",
    "typecheck": "tsc --noEmit",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "bun run build && changeset publish",
    "prepare": "husky"
  },
  "keywords": [
    "cli",
    "task-runner",
    "npm",
    "yarn",
    "pnpm",
    "bun",
    "task",
    "fuzzy-search"
  ],
  "author": "dmitriy-rs",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "conf": "^15.1.0",
    "fuse.js": "^7.1.0",
    "ink": "^6.6.0",
    "js-yaml": "^4.1.1",
    "react": "^19.2.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@changesets/cli": "^2.29.8",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
